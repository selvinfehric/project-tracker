<h1>Users</h1>
<br />
<%= link_to 'Add new', new_user_path, :class=>"btn btn-success" %>
<br /><br />
<table id="user_list" class="table table-striped">
  <tr>
    <th>Username</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Date created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.date_created %></td>
    <td class="td_button"><%= link_to 'Show', user, :class=>"btn btn-secondary btn-mini" %></td>
    <td class="td_button"><%= link_to 'Edit', edit_user_path(user), :class=>"btn btn-secondary btn-mini" %></td>
    <td class="td_button"><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class=>"btn btn-secondary btn-mini" %></td>
  </tr>
<% end %>
</table>

<br />




