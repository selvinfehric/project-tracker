<!DOCTYPE html>
<html>
<head>
  <title>Project Tracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application", controller_name %>
  <%= #yield :javascript_includes 
  %>

  <script> 
  	var APP = APP || {};
   	APP.baseUrl = "<%= root_url %>";
  </script>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
					<a class="brand" href="/">Project Tracker</a>
				<div class="nav-collapse">
					<ul class="nav">
						<li class=<%= (@current_menu=="projects")?"active" :""%>>
							<a href="/projects">Projects</a>
						</li>
						<li class="divider-vertical"></li>
						<% if(session[:user].is_admin)%>
						<li class=<%= (@current_menu=="users")?"active" :""%>>
							<a href="/users">Users</a>
						</li>
						<li class="divider-vertical"></li>
						<% end %>
						<li class="dropdown <%= (@current_menu=="user")? "active" :""%>">
					        <a href="#" data-toggle="dropdown" class="dropdown-toggle"><%= session[:user].username %><b class="caret"></b></a>
					        <ul class="dropdown-menu">
					          <li><%= link_to 'Show', session[:user] %></li>
					          <li><%= link_to 'Edit', edit_user_path(session[:user]) %></li>
					        </ul>
					    </li>
						<li class="divider-vertical"></li>
						<li class="">
							<%= link_to "Logout", :controller => "login", :action => "logout" %>
						</li>
						
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		
  	<%= content_for?(:content) ? yield(:content) : yield %>
	
	<footer class="footer">
	  <div id="footer-notice">
	   <div id="f-n-icon"></div>
	   <div id="f-n-text"> Final project // Web Development course // Faculty Of Electrical Engineering // University Of Tuzla // Project Tracker &copy; 2012 </div>
	  </div>
	  
    </footer>
    <div class="pt-logo"></div>
    </div>

</body>
</html>
